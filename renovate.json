{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": ["main"],
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash",
    "enabledManagers": ["docker-compose", "github-actions"],
    "packageRules": [
        {
            "matchUpdateTypes": ["major"],
            "matchBaseBranches": "main",
            "enabled": false
        }
    ]
}